<body>

<!-- //////////////////// -->

<div id ="container" role="main">

<!-- header -->
<header>
{% include "shared/header" %}
</header>


<!-- page -->
<div id="page" class="clearfix">

<!-- hero -->
<section class="hero_block">
<div class="hero_image ">
<img src="{{ image-main[0].path }}" alt="{{ image-main[0].name }}" width="980" height="648" />

<!-- info block -->
<div class="info_block">

<!-- blurb -->
<span class="bubble_red">{{title}}</span>
{% if subtitle %}<h4>{{ subtitle }}</h4>{% endif %}
<p>{{ body }}</p>

<!-- links -->
{% if links %}
<div class="info_block_links">
{% for link in links %}
<a href="{{ link.url }}">{{ link.name }}</a>{% unless forloop.last %}<br>{% endunless %}
{% endfor %}
</div>
{% endif %}

<!-- thumb -->
{% for image in images-infobox-thumb %}<article class="info_block_thumb">
<a href ="#" data-reveal-id="lightbox_{{ forloop.index }}" data-animation="fadeAndPop">
<img src="{{ image.path }}" alt="image.name" width="60px" height="60px" /></a>
</article>{% endfor %}

</div>

<div class="full_grad"></div>
</div>
</section>

<!-- Further content sections -->
{% for section in sections %}

<!-- Section header -->
<section class="row clearfix">
<section class="full_content">
{% if section.colour %}
<h2 class="bubble_{{ section.colour }}">{{ section.title }}</h2></section>
{% else %}
<h2 class="bubble_blue">{{ section.title }}sectitle</h2></section>
{% endif %}

<!-- Section content boxes -->
{% unless section.imagefolder %}<!-- imagebox? -->
{% for box in section.boxes %}
{% if forloop.length == 1 %}<section class="full_content">
{% elsif forloop.length == 2 %}<section class="half_split">
{% elsif forloop.length == 3 %}<section class="column_three">
{% elsif forloop.length == 5 %}<section class="column_five">
{% else %}<section class="column_four">
{% endif %}
<div class="bubble_block">
{% if section.colour %}<span class="bubble_{{ section.colour }}">{% endif %}{{ box.title }}{% if section.colour %}</span>{% endif %}</div>{% if box.subtitle %}<h4>{{ box.subtitle }}</h4>{% endif %}
<p>{{ box.body }}</p>
{% for link in box.links %}<a href="{{ link.url }}">{{ link.name }}</a>{% unless forloop.last %}<br>{% endunless %}{% endfor %}
</section>
{% endfor %}
{% else %}<!-- imagebox? -->
{% for box in section.boxes %}
<section class="column_four_thumb">
<div class="bubble_block">
{% if section.colour %}<span class="bubble_{{ section.colour }}_imagebox">{% endif %}{{ box.title }}{% if section.colour %}</span>{% endif %}</div>
<a href="{{ box.url }}"><img src="{% for image in images-boxes %}{% if image.name == box.title %}{{ image.path }}{% endif %}{% endfor %}" alt="{{ box.title }}" width="217" height="142" /></a>
</section>
{% endfor %}
{% endunless %}<!-- imagebox? -->
</section>
{% endfor %}

</div>

<!-- footer -->
<footer>{% include "shared/footer" %}</footer>

<!-- spacer -->
<div id="space"></div>

</div>

<!-- lightboxes -->
{% for image in images-infobox %}
<div id="lightbox_{{ forloop.index }}" class="reveal-modal">
<img src="{{ image.path }}" alt="{{ image.name }}" width="980" height="648" />
<a class="close-reveal-modal">close &#215;</a>
</div>
{% endfor %}

